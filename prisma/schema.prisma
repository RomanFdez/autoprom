generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(uuid())
  username String @unique
  password String
}

model Settings {
  id             String @id @default("settings")
  initialBalance Float  @default(0)
  darkMode       Boolean @default(false)
}

model Category {
  id           String        @id
  code         String
  name         String
  color        String
  icon         String
  isFixed      Boolean       @default(false)
  debt         Float         @default(0)
  showInExpense Boolean      @default(true)
  showInIncome  Boolean      @default(true)
  transactions Transaction[]
}

model Tag {
  id           String        @id
  code         String
  name         String
  color        String
  transactions Transaction[]
}

model Transaction {
  id          String    @id
  date        String
  description String
  amount      Float
  categoryId  String?
  category    Category? @relation(fields: [categoryId], references: [id])
  tags        Tag[]
}

model Todo {
  id        String   @id
  text      String
  done      Boolean  @default(false)
  createdAt DateTime @default(now())
}
